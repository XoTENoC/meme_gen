generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Image {
  id        Int    @id @default(autoincrement())
  name      String
  highRes   String // This will store a path or a base64 string
  thumbnail String // This will store a path or a base64 string
}
